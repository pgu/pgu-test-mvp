<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .area {
            width: 400px;
            margin-top: 25px;
            border: grey 1px solid;
        }
    </ui:style>
    <g:HTMLPanel>
    
        <g:HTMLPanel ui:field="menu">
            <g:Button ui:field="goToPlaceABtn">go to place A</g:Button>
            <g:Button ui:field="goToPlaceBBtn">go to place B</g:Button>
        </g:HTMLPanel>
        
        <g:HorizontalPanel>
            <g:SimplePanel ui:field="leftPanel" addStyleNames="{style.area}"/>
            <g:SimplePanel ui:field="rightPanel" addStyleNames="{style.area}"/>
        </g:HorizontalPanel>
    
    </g:HTMLPanel>
</ui:UiBinder> 